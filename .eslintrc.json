{
  "env": {
    "commonjs": true,
    "es2021": true,
    "browser": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "brace-style": ["error", "stroustrup"],
    "comma-dangle": ["error", "never"],
    "no-unused-vars": ["warn"],
    "no-underscore-dangle": "off"
  },
  "ignorePatterns": ["bin/www"]
}
